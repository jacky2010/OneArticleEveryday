<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/home_rl_toolbar"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/m8"
            android:paddingRight="@dimen/m8"
            android:paddingTop="@dimen/m4"
            android:layout_height="30dp"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/home_iv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/menu"/>
            <ImageView
                android:id="@+id/home_iv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/more"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="left"
        android:layout_width="100dp"
        android:background="@color/background"
        android:layout_height="match_parent"
        >
       <android.support.v7.widget.RecyclerView
           android:id="@+id/home_rv_leftcontent"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

       </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="right"
        android:layout_width="50dp"
        android:background="@color/background"
        android:layout_height="match_parent"
        >

  <android.support.v7.widget.RecyclerView
      android:id="@+id/home_rv_rightcontent"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>